<Window x:Class="MaceTweaks.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MaceTweaks" Width="420" MinHeight="700"
        SizeToContent="Height" ResizeMode="CanMinimize"
        Topmost="True" Background="{StaticResource BgBrush}"
        Icon="/MaceTweaks.ico"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Button Style -->
        <Style x:Key="FlatBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Accent Button -->
        <Style x:Key="AccentBtn" TargetType="Button" BasedOn="{StaticResource FlatBtn}">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="10,11"/>
        </Style>

        <!-- Tab Button -->
        <Style x:Key="TabBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource Text3Brush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="0,10"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Style -->
        <Style x:Key="Card" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource SurfaceBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Margin" Value="20,0"/>
            <Setter Property="Padding" Value="14,12"/>
        </Style>

        <!-- Section Label -->
        <Style x:Key="SectionLabel" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource Text3Brush}"/>
            <Setter Property="Margin" Value="20,12,0,4"/>
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitch" TargetType="CheckBox">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid>
                            <Border x:Name="Track" Width="46" Height="24" CornerRadius="12"
                                    Background="{StaticResource Border2Brush}"/>
                            <Ellipse x:Name="Thumb" Width="18" Height="18"
                                     Fill="{StaticResource TextBrush}"
                                     HorizontalAlignment="Left" Margin="3,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Track" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="Thumb" Property="HorizontalAlignment" Value="Right"/>
                                <Setter TargetName="Thumb" Property="Margin" Value="0,0,3,0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- SpinBox Style -->
        <Style x:Key="SpinTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="50"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Padding" Value="2,4"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentBrush}"/>
        </Style>

        <!-- Small Button for spin -->
        <Style x:Key="SpinBtn" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource Surface2Brush}"/>
            <Setter Property="Foreground" Value="{StaticResource Text2Brush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="0,2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Watermark -->
        <Image x:Name="Watermark" Opacity="0.06" Stretch="None"
               HorizontalAlignment="Center" VerticalAlignment="Center"
               IsHitTestVisible="False" Margin="0,100,0,0"/>

        <!-- Main Content -->
        <DockPanel>
            <!-- Header -->
            <Border DockPanel.Dock="Top" Background="{StaticResource SurfaceBrush}"
                    BorderBrush="{StaticResource BorderBrush}" BorderThickness="0,0,0,1"
                    Padding="20,12">
                <Grid>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <Ellipse x:Name="PulseDot" Width="10" Height="10"
                                 Fill="{StaticResource AccentBrush}" Margin="0,0,9,0"/>
                        <TextBlock Text="MaceTweaks" FontFamily="Segoe UI" FontSize="15"
                                   FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                    </StackPanel>
                    <TextBlock Text="v2.1.0" FontFamily="Segoe UI" FontSize="9"
                               Foreground="{StaticResource Text3Brush}"
                               HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
                </Grid>
            </Border>

            <!-- Tab Bar -->
            <UniformGrid DockPanel.Dock="Top" Columns="4" Background="{StaticResource SurfaceBrush}">
                <Button x:Name="TabMace" Content="âš”  Stun Slam" Style="{StaticResource TabBtn}" Click="Tab_Click"/>
                <Button x:Name="TabBreach" Content="ðŸ”€  Breach Swap" Style="{StaticResource TabBtn}" Click="Tab_Click"/>
                <Button x:Name="TabAttr" Content="ðŸ”„  Attr Swap" Style="{StaticResource TabBtn}" Click="Tab_Click"/>
                <Button x:Name="TabCredits" Content="â„¹  Credits" Style="{StaticResource TabBtn}" Click="Tab_Click"/>
            </UniformGrid>
            <Border DockPanel.Dock="Top" Height="1" Background="{StaticResource BorderBrush}"/>

            <!-- Tab Content -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                          Background="Transparent">
                <Grid>
                    <!-- â•â•â• MACE TAB â•â•â• -->
                    <StackPanel x:Name="MacePanel" Visibility="Visible">
                        <TextBlock Text="STATUS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel>
                                <DockPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="MaceDot" Width="8" Height="8" Fill="{StaticResource GreenBrush}" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="MaceStatusText" Text="Active" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                                    </StackPanel>
                                    <CheckBox x:Name="MaceToggle" IsChecked="True" Style="{StaticResource ToggleSwitch}"
                                              HorizontalAlignment="Right" Checked="MaceToggle_Changed" Unchecked="MaceToggle_Changed"/>
                                </DockPanel>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,10"/>
                                <UniformGrid Columns="3">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="MaceCount" Text="0" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="EXECUTIONS" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="MaceHotkeyDisplay" Text="MB4" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="HOTKEY" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="3â†’LCâ†’2â†’LC" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="SEQUENCE" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="TRIGGER  (Mouse Button)" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <DockPanel>
                                <TextBlock Text="Mouse Button" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center" FontSize="12"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock x:Name="MaceHkLabel" Text="MB4" FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                               Foreground="{StaticResource Accent2Brush}" Background="{StaticResource Surface2Brush}"
                                               Padding="10,5" MinWidth="80" TextAlignment="Center"/>
                                    <Button x:Name="MaceHkBtn" Content="â— Record" Style="{StaticResource FlatBtn}"
                                            FontSize="10" FontWeight="Bold" Margin="6,0,0,0" Click="MaceHk_Record"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <TextBlock Text="MACRO KEYS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="Key 1  (e.g. 3)" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="MaceK1Label" Text="3" FontFamily="Consolas" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" Background="{StaticResource Surface2Brush}"
                                                   Padding="10,5" MinWidth="60" TextAlignment="Center"/>
                                        <Button x:Name="MaceK1Btn" Content="Change" Style="{StaticResource FlatBtn}"
                                                FontSize="10" Margin="5,0,0,0" Click="MaceK1_Record"/>
                                    </StackPanel>
                                </DockPanel>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,6"/>
                                <DockPanel>
                                    <TextBlock Text="Key 2  (e.g. 2)" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="MaceK2Label" Text="2" FontFamily="Consolas" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" Background="{StaticResource Surface2Brush}"
                                                   Padding="10,5" MinWidth="60" TextAlignment="Center"/>
                                        <Button x:Name="MaceK2Btn" Content="Change" Style="{StaticResource FlatBtn}"
                                                FontSize="10" Margin="5,0,0,0" Click="MaceK2_Record"/>
                                    </StackPanel>
                                </DockPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="DELAYS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel x:Name="MaceDelaysPanel"/>
                        </Border>

                        <Button x:Name="MaceSaveBtn" Content="Save Configuration" Style="{StaticResource AccentBtn}"
                                Margin="20,8,20,4" Click="MaceSave_Click"/>
                    </StackPanel>

                    <!-- â•â•â• BREACH TAB â•â•â• -->
