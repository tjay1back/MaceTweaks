                                        <TextBlock x:Name="BreachCount" Text="0" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="EXECUTIONS" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="BreachHotkeyDisplay" Text="Ctrl+Alt" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="HOTKEY" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="1â†’Q+LMB" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="SEQUENCE" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="TRIGGER HOTKEY  (Keyboard)" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <DockPanel>
                                <TextBlock Text="Hotkey" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock x:Name="BreachHkLabel" Text="Ctrl+Alt" FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                               Foreground="{StaticResource Accent2Brush}" Background="{StaticResource Surface2Brush}"
                                               Padding="10,5" MinWidth="100" TextAlignment="Center"/>
                                    <Button x:Name="BreachHkBtn" Content="â— Record" Style="{StaticResource FlatBtn}"
                                            FontSize="10" FontWeight="Bold" Margin="6,0,0,0" Click="BreachHk_Record"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <TextBlock Text="MACRO KEYS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="Key 1  (e.g. 1)" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="BreachK1Label" Text="1" FontFamily="Consolas" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" Background="{StaticResource Surface2Brush}"
                                                   Padding="10,5" MinWidth="60" TextAlignment="Center"/>
                                        <Button Content="Change" Style="{StaticResource FlatBtn}" FontSize="10" Margin="5,0,0,0" Click="BreachK1_Record"/>
                                    </StackPanel>
                                </DockPanel>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,6"/>
                                <DockPanel>
                                    <TextBlock Text="Key 2  (e.g. Q)" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="BreachK2Label" Text="Q" FontFamily="Consolas" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" Background="{StaticResource Surface2Brush}"
                                                   Padding="10,5" MinWidth="60" TextAlignment="Center"/>
                                        <Button Content="Change" Style="{StaticResource FlatBtn}" FontSize="10" Margin="5,0,0,0" Click="BreachK2_Record"/>
                                    </StackPanel>
                                </DockPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="DELAYS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel x:Name="BreachDelaysPanel"/>
                        </Border>

                        <Button x:Name="BreachSaveBtn" Content="Save Configuration" Style="{StaticResource AccentBtn}"
                                Margin="20,8,20,4" Click="BreachSave_Click"/>
                    </StackPanel>

                    <!-- â•â•â• ATTRIBUTE TAB â•â•â• -->
                    <StackPanel x:Name="AttrPanel" Visibility="Collapsed">
                        <Border Background="#1a2e1a" BorderBrush="{StaticResource GreenBrush}" BorderThickness="1"
                                CornerRadius="6" Margin="20,16,20,0" Padding="0,8">
                            <TextBlock Text="Attribute Swap â€” Key1 â†’ Key2 + LMB" FontSize="11" FontWeight="Bold"
                                       Foreground="{StaticResource GreenBrush}" HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock Text="STATUS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel>
                                <DockPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Ellipse x:Name="AttrDot" Width="8" Height="8" Fill="{StaticResource GreenBrush}" Margin="0,0,8,0"/>
                                        <TextBlock x:Name="AttrStatusText" Text="Active" FontSize="14" FontWeight="Bold" Foreground="{StaticResource TextBrush}"/>
                                    </StackPanel>
                                    <CheckBox x:Name="AttrToggle" IsChecked="True" Style="{StaticResource ToggleSwitch}"
                                              HorizontalAlignment="Right" Checked="AttrToggle_Changed" Unchecked="AttrToggle_Changed"/>
                                </DockPanel>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,10"/>
                                <UniformGrid Columns="3">
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="AttrCount" Text="0" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="EXECUTIONS" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock x:Name="AttrHotkeyDisplay" Text="Ctrl+^" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="HOTKEY" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel HorizontalAlignment="Center">
                                        <TextBlock Text="1â†’2+LMB" FontFamily="Consolas" FontSize="14" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                                        <TextBlock Text="SEQUENCE" FontSize="8" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </UniformGrid>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="TRIGGER HOTKEY  (Keyboard)" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <DockPanel>
                                <TextBlock Text="Hotkey" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock x:Name="AttrHkLabel" Text="Ctrl+^" FontFamily="Consolas" FontSize="11" FontWeight="Bold"
                                               Foreground="{StaticResource Accent2Brush}" Background="{StaticResource Surface2Brush}"
                                               Padding="10,5" MinWidth="100" TextAlignment="Center"/>
                                    <Button x:Name="AttrHkBtn" Content="â— Record" Style="{StaticResource FlatBtn}"
                                            FontSize="10" FontWeight="Bold" Margin="6,0,0,0" Click="AttrHk_Record"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>

                        <TextBlock Text="MACRO KEYS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel>
                                <DockPanel>
                                    <TextBlock Text="Key 1  (e.g. 1)" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="AttrK1Label" Text="1" FontFamily="Consolas" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" Background="{StaticResource Surface2Brush}"
                                                   Padding="10,5" MinWidth="60" TextAlignment="Center"/>
                                        <Button Content="Change" Style="{StaticResource FlatBtn}" FontSize="10" Margin="5,0,0,0" Click="AttrK1_Record"/>
                                    </StackPanel>
                                </DockPanel>
                                <Border Height="1" Background="{StaticResource BorderBrush}" Margin="0,6"/>
                                <DockPanel>
                                    <TextBlock Text="Key 2  (e.g. 2)" Foreground="{StaticResource Text2Brush}" VerticalAlignment="Center"/>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="AttrK2Label" Text="2" FontFamily="Consolas" FontWeight="Bold"
                                                   Foreground="{StaticResource TextBrush}" Background="{StaticResource Surface2Brush}"
                                                   Padding="10,5" MinWidth="60" TextAlignment="Center"/>
                                        <Button Content="Change" Style="{StaticResource FlatBtn}" FontSize="10" Margin="5,0,0,0" Click="AttrK2_Record"/>
                                    </StackPanel>
                                </DockPanel>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="DELAYS" Style="{StaticResource SectionLabel}"/>
                        <Border Style="{StaticResource Card}" Margin="20,0,20,10">
                            <StackPanel x:Name="AttrDelaysPanel"/>
                        </Border>

                        <Button x:Name="AttrSaveBtn" Content="Save Configuration" Style="{StaticResource AccentBtn}"
                                Margin="20,8,20,4" Click="AttrSave_Click"/>
                    </StackPanel>

                    <!-- â•â•â• CREDITS TAB â•â•â• -->
                    <StackPanel x:Name="CreditsPanel" Visibility="Collapsed" HorizontalAlignment="Center" Margin="0,60,0,20">
                        <Image x:Name="CreditsIcon" Width="96" Height="96" Margin="0,0,0,16"
                               RenderOptions.BitmapScalingMode="NearestNeighbor" HorizontalAlignment="Center"/>
                        <TextBlock Text="MaceTweaks" FontFamily="Segoe UI" FontSize="22" FontWeight="Bold"
                                   Foreground="{StaticResource TextBrush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="v2.1.0" FontSize="12" Foreground="{StaticResource Text3Brush}"
                                   HorizontalAlignment="Center" Margin="0,2,0,24"/>

                        <Border Height="1" Width="200" Background="{StaticResource BorderBrush}" Margin="0,0,0,24"/>

                        <TextBlock Text="MADE BY" FontSize="9" FontWeight="Bold" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="PeakJayX" FontSize="18" FontWeight="Bold" Foreground="{StaticResource Accent2Brush}"
                                   HorizontalAlignment="Center" Margin="0,4,0,2"/>
                        <TextBlock Text="tjay_back" FontFamily="Consolas" FontSize="13" Foreground="{StaticResource AccentBrush}"
                                   HorizontalAlignment="Center"/>

                        <Border Height="1" Width="200" Background="{StaticResource BorderBrush}" Margin="0,24"/>

                        <TextBlock Text="LINKS" FontSize="9" FontWeight="Bold" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                        <TextBlock x:Name="LinkLabel" Text="guns.lol/jay_back" FontSize="12"
                                   Foreground="{StaticResource Accent2Brush}" HorizontalAlignment="Center"
                                   Cursor="Hand" Margin="0,6,0,0"
                                   MouseLeftButtonUp="Link_Click"
                                   MouseEnter="Link_Enter" MouseLeave="Link_Leave">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>

                        <TextBlock Text="MORE OF MY CONTENT" FontSize="9" FontWeight="Bold" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center" Margin="0,16,0,0"/>
                        <TextBlock x:Name="GithubLabel" Text="github.com/tjay1back" FontSize="12"
                                   Foreground="{StaticResource Accent2Brush}" HorizontalAlignment="Center"
                                   Cursor="Hand" Margin="0,6,0,0"
                                   MouseLeftButtonUp="Github_Click"
                                   MouseEnter="Github_Enter" MouseLeave="Github_Leave">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>
                        <TextBlock x:Name="DiscordLabel" Text="Discord Server" FontSize="12"
                                   Foreground="{StaticResource Accent2Brush}" HorizontalAlignment="Center"
