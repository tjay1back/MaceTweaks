                                   MouseLeftButtonUp="Discord_Click"
                                   MouseEnter="Discord_Enter" MouseLeave="Discord_Leave">
                            <TextBlock.TextDecorations>
                                <TextDecoration Location="Underline"/>
                            </TextBlock.TextDecorations>
                        </TextBlock>

                        <Border Height="1" Width="200" Background="{StaticResource BorderBrush}" Margin="0,24"/>

                        <TextBlock Text="Built with C# &amp; WPF" FontSize="11" Foreground="{StaticResource Text3Brush}" HorizontalAlignment="Center"/>
                        <TextBlock Text="No hooks Â· No drivers Â· RegisterHotKey API" FontSize="10"
