<Application x:Class="MaceTweaks.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <!-- Colors -->
            <Color x:Key="BgColor">#0d0d0f</Color>
            <Color x:Key="SurfaceColor">#141416</Color>
            <Color x:Key="Surface2Color">#1c1c1f</Color>
            <Color x:Key="BorderColor">#2a2a2f</Color>
            <Color x:Key="Border2Color">#3a3a42</Color>
            <Color x:Key="AccentColor">#6c63ff</Color>
            <Color x:Key="Accent2Color">#8b85ff</Color>
            <Color x:Key="AccentDimColor">#2d2b4e</Color>
            <Color x:Key="RedColor">#ff4757</Color>
            <Color x:Key="RedDimColor">#3d1820</Color>
            <Color x:Key="GreenColor">#2ecc71</Color>
            <Color x:Key="AmberColor">#f39c12</Color>
            <Color x:Key="TextColor">#f0f0f5</Color>
            <Color x:Key="Text2Color">#9090a0</Color>
            <Color x:Key="Text3Color">#555560</Color>

            <SolidColorBrush x:Key="BgBrush" Color="{StaticResource BgColor}"/>
            <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
            <SolidColorBrush x:Key="Surface2Brush" Color="{StaticResource Surface2Color}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
            <SolidColorBrush x:Key="Border2Brush" Color="{StaticResource Border2Color}"/>
            <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
            <SolidColorBrush x:Key="Accent2Brush" Color="{StaticResource Accent2Color}"/>
            <SolidColorBrush x:Key="AccentDimBrush" Color="{StaticResource AccentDimColor}"/>
            <SolidColorBrush x:Key="RedBrush" Color="{StaticResource RedColor}"/>
            <SolidColorBrush x:Key="RedDimBrush" Color="{StaticResource RedDimColor}"/>
            <SolidColorBrush x:Key="GreenBrush" Color="{StaticResource GreenColor}"/>
            <SolidColorBrush x:Key="AmberBrush" Color="{StaticResource AmberColor}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
            <SolidColorBrush x:Key="Text2Brush" Color="{StaticResource Text2Color}"/>
            <SolidColorBrush x:Key="Text3Brush" Color="{StaticResource Text3Color}"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
